@model Consola.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;color:white">
</h3>

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">
                                        <a href="/Usuario2/Index" class="nav-link">
                                            <img src="~/fonts/Imagenes/flecha_izquierda.png" width="64" height="32" />
                                        </a>
                                    </th>
                                    <th td style="vertical-align:middle"><h3 class="box-title">Editar usuario</h3></th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- /.box-header -->
                    <div style="text-align:center;color:red">
                        @TempData["errorMensaje"]
                    </div>

                    <div style="text-align:center;color:green">
                        @TempData["exitoMensaje"]
                    </div>

                    @if (Session["ROLES"].Equals("Admin"))
                    {
                        <div class="box-header">
                            <table class="table table-bordered">
                                <thead>
                                    <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                        <th style="border:3px solid lightgrey" width="50">

                                            <div class="box">
                                                <div class="box-header">
                                                    <h3 class="box-title">Editar los datos del usuario.</h3>
                                                </div>

                                                @using (Html.BeginForm())
                                                {
                                                    @Html.AntiForgeryToken()

                                            <div class="form-horizontal">
                                                <br />
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                @Html.HiddenFor(model => model.idUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        <label>Rol de usuario:</label>
                                                    </div>
                                                    <div class="col-md-10">
                                                        @Html.DropDownList("listIdRol", new SelectList(ViewBag.Lista, "idRol", "nombreRol"), new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "listIdRol", @name = "listIdRol" } })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        <label>Nuevo nombre de usuario:</label>
                                                    </div>
                                                    <div class="col-md-10">
                                                        <input class="form-control" type="text" id="txtNombreUsuario" name="txtNombreUsuario">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        <label>Contraseña:</label>
                                                    </div>
                                                    <div class="col-md-10">
                                                        <input class="form-control" type="password" id="txtContrasena" name="txtContrasena">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-10">
                                                        <label>Confirmar contraseña:</label>
                                                    </div>
                                                    <div class="col-md-10">
                                                        <input class="form-control" type="password" id="txtConfirmarContrasena" name="txtConfirmarContrasena">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="modal-footer justify-content-start">
                                                        <input class="btn btn-primary" type="submit" value="Guardar" id="guardar" name="guardar" />
                                                    </div>
                                                </div>
                                            </div>
                                                }
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h3 style="text-align:center;color:black">
                            Este módulo no está disponible para este usuario.
                        </h3>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#guardar").click, function () {
                alert('Institucion Guardada con exito!');
            }
        }
        );
    </script>
}
