@model Consola.Models.Proveedores
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;color:white">
</h3>

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">
                                        <a href="/Proveedores/Index" class="nav-link">
                                            <img src="~/fonts/Imagenes/flecha_izquierda.png" width="64" height="32" />
                                        </a>
                                    </th>
                                    <th td style="vertical-align:middle"><h3 class="box-title">Editar proveedor</h3></th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- /.box-header -->
                    <div style="text-align:center;color:red">
                        @TempData["errorMensaje"]
                    </div>

                    <div style="text-align:center;color:green">
                        @TempData["exitoMensaje"]
                    </div>

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">

                                        <div class="box">
                                            <div class="box-header">
                                                <h3 class="box-title">Editar los datos del proveedor.</h3>
                                            </div>

                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()

                                                <div class="form-horizontal">
                                                    <br />
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                    @Html.HiddenFor(model => model.idProveedor, new { htmlAttributes = new { @class = "form-control" } })

                                                    <label>Nombre de proveedor:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.nombreProveedor, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.nombreProveedor, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Número de teléfono:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @type = "tel", @pattern = "[0-9]{4}-[0-9]{4}", @placeholder = "Ejemplo: XXXX-XXXX" } })
                                                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger", @type = "tel" })
                                                            </div>
                                                        </div>

                                                        <label>Dirección:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Correo electrónico:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.correoElectronico, new { htmlAttributes = new { @class = "form-control", type = "Email" } })
                                                                @Html.ValidationMessageFor(model => model.correoElectronico, "", new { @class = "text-danger", type = "Email" })
                                                            </div>
                                                        </div>

                                                        <label>Nombre de contacto:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.nombreContacto, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.nombreContacto, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                    <div class="form-group">
                                                        <div class="modal-footer justify-content-start">
                                                            <input class="btn btn-primary" type="submit" value="Guardar cambios" id="guardar" name="guardar" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
    {
    <script type="text/javascript">
            $(document).ready(function () {
                $("#guardar").click, function () {
                    alert('Institucion Guardada con exito!');
                }
            }
         );
    </script>

}
