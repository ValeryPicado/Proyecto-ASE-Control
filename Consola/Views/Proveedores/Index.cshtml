@model IEnumerable<Consola.Models.Proveedores>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">
                                        <a href="/Home/Index" class="nav-link">
                                            <img src="~/fonts/Imagenes/flecha_izquierda.png" width="64" height="32" />
                                        </a>
                                    </th>
                                    <th td style="vertical-align:middle"><h3 class="box-title">Proveedores</h3></th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <div style="text-align:center;color:red">
                            @TempData["errorMensaje"]
                        </div>
                        <div class="header">
                            La siguiente tabla muestra los proveedores insertados en el sistema.
                        </div>
                        <div class="modal-footer">
                            @Html.ActionLink("Nuevo proveedor", "Crear", "Proveedores", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-success btn-sm pull-left" })
                            <a href="~/Informes/ReporteProveedores.aspx" class="btn btn-success btn-sm">Reporte</a>
                        </div>
                        @Html.ValidationMessage("Detalle")
                        <table id="Datos" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.idProveedor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nombreProveedor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.telefono)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.direccion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.correoElectronico)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nombreContacto)
                                    </th>

                                    <th>
                                        <label>Opciones</label>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        if (item.estadoProveedor == false)
                                        {
                                            continue;
                                        }

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.idProveedor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombreProveedor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.direccion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.correoElectronico)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombreContacto)
                                            </td>

                                            <td>
                                                @Html.ActionLink(" ", "Editar", new { id = item.idProveedor }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-edit" })
                                                @if (Session["ROLES"].Equals("Admin"))
                                                {
                                                    <label>|</label> @Html.ActionLink(" ", "Deshabilitar", new { id = item.idProveedor }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash", onclick = "return Confirmar(this);" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

@section Scripts
{
    <script type="text/javascript">
  $(document).ready(function () {
    $('#Datos').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
    </script>

}