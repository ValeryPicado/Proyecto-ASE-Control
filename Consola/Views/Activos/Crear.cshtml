@model Consola.Models.Activos
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;color:white">
</h3>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">
                                        <a href="/Activos/Index" class="nav-link">
                                            <img src="~/fonts/Imagenes/flecha_izquierda.png" width="64" height="32" />
                                        </a>
                                    </th>
                                    <th td style="vertical-align:middle"><h3 class="box-title">Agregar nuevo activo</h3></th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- /.box-header -->
                    <div style="text-align:center;color:red">
                        @TempData["errorMensaje"]
                    </div>

                    <div style="text-align:center;color:green">
                        @TempData["exitoMensaje"]
                    </div>

                    <div class="box-header">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table table-bordered" style="border:3px solid lightgrey;vertical-align:middle">
                                    <th style="border:3px solid lightgrey" width="50">

                                        <div class="box">
                                            <div class="box-header">
                                                <h3 class="box-title">Formulario para agregar un nuevo activo al sistema.</h3>
                                            </div>
                                            <!-- /.box-header -->
                                            @using (Html.BeginForm())
                                            {
                                                <div class="box-body">
                                                    <div class="form-horizontal">
                                                        @Html.AntiForgeryToken()

                                                        @Html.Hidden("IdActivo", 1)
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                        <label>Código del activo:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.codigoActivo, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.codigoActivo, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Nombre del activo:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.nombreActivo, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.nombreActivo, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Costo del activo:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.costoActivo, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.costoActivo, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Años:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.anno, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.anno, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Meses:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.meses, new { htmlAttributes = new { @class = "form-control" } })
                                                                @Html.ValidationMessageFor(model => model.meses, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>

                                                        <label>Fecha de activo:</label>

                                                        <div class="form-group">
                                                            <div class="col-md-6">
                                                                @Html.EditorFor(model => model.fechaActivo, new { htmlAttributes = new { @class = "form-control", @id = "datepicker", Type = "date" } })
                                                                @Html.ValidationMessageFor(model => model.fechaActivo, "", new { @class = "text-danger", Type = "date" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer justify-content-start">
                                                    @*<button class="btn btn-danger" data-dismiss="modal">Regresar</button>*@
                                                    <input class="btn btn-primary" type="submit" value="Guardar" id="guardar" name="guardar" />
                                                </div>
                                            }
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
{
